<div class="container">
  <div class="d-flex align-items-baseline">
    <%= link_to :back, class: "text-decoration-none text-muted" do %>
      <i class="fa-solid fa-chevron-left pe-3"></i>
    <% end %>
    <h1 class="mb-4">Mon<br><strong>évolution</strong></h1>
  </div>

<div class="date-search">
  <%= form_with url: health_logs_path, method: :get, class: "d-flex mb-3 mt-3" do %>
    <div class="input-left-blue">
      <%= date_field_tag :start_date,
        params[:start_date],
        class: "form-control weight-blue",
        data: { controller: "datepicker" },
        value: @start_date
      %>
    </div>

    <div class="input-right-blue">
      <%= date_field_tag :end_date,
        params[:end_date],
        class: "form-control weight-blue",
        data: { controller: "datepicker" },
        value: @end_date
      %>
    </div>
    <div class="ms-2">
      <%= submit_tag "ok", name: "", class: "btn-orange-mini" %>
    </div>

  <% end %>
</div>

