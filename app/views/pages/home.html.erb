<div class="container container-home">

  <% if user_signed_in? && @plan.present? %>
    <h1>Hello <b><%= current_user.firstname %></b> !</h1>
    <div class="summary">
      <div class="summary-activity">

        <div class="summary-stat">
          <i class="fa-solid fa-person-running icon-summary-stat"></i>
          <p>Cumul d'activité</p>
        </div>

        <% if ActivitiesLog.where(user:current_user).count !=0 %>
          <% if ActivitiesLog.where(user:current_user).count == 1 %>
            <h3 class= "title-card-home" >Une activité réalisée et <%= @calories %> calories brûlées</h3>
          <% else %>
            <h3 class= "title-card-home" ><%= ActivitiesLog.where(user:current_user).count %> activités réalisées et <%= @calories %> calories brûlées</h3>
          <% end %>
          <p>Depuis le début du programme 💪 </p>
        <% else %>
          <h3 class= "title-card-home" >Pas encore d'activités enregistrées 🙁</h3>
        <% end %>
      </div>

      <div class="summary-health">

        <div class="summary-stat">
          <i class="fa-solid fa-heart icon-summary-health"></i>
          <p>Evolution santé</p>
        </div>

        <% if @weight < 0 %>
          <h3 class="title-card-home"><%= @weight %> kg</h3>
          <p>Depuis le début du programme 💪 </p>
        <% elsif @weight == 0 %>
          <h3 class="title-card-home">+ <%= @weight %> kg</h3>
          <p>Tu as maintenu ton poids depuis le début du programme 💪 </p>
        <% else %>
          <h3 class="title-card-home">+ <%= @weight %> kg</h3>
          <p>Depuis le début du programme, allez, encore un petit effort 💪 </p>
        <% end %>
      </div>
    </div>



    <div class="row mt-2">
      <%= link_to plan_path(@plan) do %>
        <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url('https://images.unsplash.com/photo-1649528414135-36853832d9e3');">
          <h4 class="pt-3 ps-2">Ton programme personnalisé </h4>
          <h6 class="ps-2"><%= @plan.name %></h6>
        </div>
      <% end %>
     </div>

    <h2 class="mt-2">Cette semaine, tu dois :</h2>

    <div class="summary">
      <div class="bottom-activity">
        <p>💪 <%= @myplan %></p>
      </div>

      <div class="bottom-health">
          <p>🥝 <%= @current_food_plan  %></p>
      </div>
    </div>

  <% elsif user_signed_in? %>
    <div class="round-home">
      <div class="text-round-home">Coach <br> Léon</div>
    </div>
    <p>Il est maintenant temps de :</p>
    <%= link_to "CREER TON PLAN", new_plan_path, class: "text-center" %><br>
    <p>afin que Coach Léon te propose ton plan personnalisé !</p>

  <% else %>
    <div class="round-home">
      <div class="text-round-home">Coach <br> Léon</div>
    </div>
      <p>Te propose un <b>programme personnalisé</b> en fonction de <b>tes objectifs</b> !</p>
      <%= link_to "Se connecter", new_user_session_path, class: "text-center" %>
      <%= link_to "S'inscrire", new_user_registration_path, class: "text-center" %>
  <% end %>

</div>
