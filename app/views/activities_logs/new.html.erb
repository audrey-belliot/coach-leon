<div class="container">
  <h1>Ajout<br><b>activité</b></h1>

  <%= simple_form_for @activity_log do |f| %>
    <%= f.input :date, label: false, input_html: { class: 'input-blue' }, html5: true %>

    <% @activities.each do |activity| %>
      <%= activity.activity %>
    <% end %>


    <%= f.input :activity_id, label: false, input_html: { class: 'input-blue' }, placeholder: "activité choisie", html5: true %>
    <%= f.input :duration, label: false, input_html: { class: 'input-blue' }, placeholder: "durée", html5: true %>
    <%= f.input :comment, label: false, input_html: { class: 'input-text' }, html5: true %>





    <div class="mt-4"><%= f.submit "Valider", class: " btn btn-orange" %></div>
  <% end %>


</div>
