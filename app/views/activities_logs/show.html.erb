<div class="container mt-3 d-flex">
  <div class="row m-2">
    <div class="d-flex align-items-baseline">
      <%= link_to :back, class: "text-decoration-none text-muted" do %>
        <i class="fa-solid fa-chevron-left pe-3"></i>
      <% end %>
      <h1 class="mb-4">Détail<br>
      <strong>de session</strong></h1>
    </div>

    <div class="input-blue mb-2">
      <%= @activity_log.activity.category %>
    </div>

    <div class="input-orange mt-2">
      <%= @activity_log.activity.activity %>
    </div>

    <div class="d-flex align-items-baseline pt-4">
        <h2 class="h2">Mon activité du <%= @activity_log.created_at.strftime('%d/%m/%Y à %H:%M') %></h2>
    </div>
    <div class="mt-4">
      <div class="card-logs ">
        <%= @activity_log.activity.picture %>
      </div>
    </div>
    <div class="mt-4">
        <div class="h2">Ce que j'ai pensé de cette session </div>
        <%= @activity_log.comment %>
    </div>
  </div>
</div>
