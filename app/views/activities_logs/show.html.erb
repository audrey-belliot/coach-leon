<div class="container">
  <div class="d-flex align-items-baseline">
    <%= link_to :back, class: "text-decoration-none text-muted" do %>
      <i class="fa-solid fa-chevron-left pe-3"></i>
    <% end %>
    <h1>Détail session de<br>
      <strong><%= @activity_log.activity.activity %></strong></h1>
  </div>

    <div class="mt-3">
      <p><i class="fa-regular fa-calendar orange"></i> <%= @activity_log.date.strftime('%d/%m/%Y') %></p>
      <p><i class="fa-regular fa-clock orange"></i> <%= @activity_log.duration.floor() %> minutes</p>
    </div>

    <div class="card-logs"><%= image_tag(@activity_log.activity.picture) %></div>

    <div class="mt-4 ms-4 me-4">
      <%= @activity_log.comment %>
    </div>
  
  <!-- Code à checker -->
    <div class="d-flex mt-4 ms-4 me-4">
        <h2 class="h2">Mon activité du <%= @activity_log.date.strftime('%d/%m/%Y') %></h2>
    </div>
      <div class="mt-4 ms-4 me-4">
        <div class="card-logs">
          <%= image_tag(@activity_log.activity.picture) %>
        </div>
      </div>
      <div class="mt-4 ms-4 me-4">
          <div class="h2"><i class="fa-regular fa-comment pe-2"></i>Mon avis sur la session</div>
          <%= @activity_log.comment %>
      </div>
      <div class="mt-4 ms-4 me-4">
      <div class="h2"><i class="fa-regular fa-clock pe-2"></i>Durée</div>
          <%= @activity_log.duration.floor() %> minutes<br>
      </div>
      <div class="mt-4 ms-4 me-4">
      <div class="h2"><i class="fa-solid fa-bolt pe-2"></i>Calories brûlées</div>
        <%= @activity_log.activity.calories_loss %> calories
      </div>
          <%= link_to activities_log_path(@activity_log),
                  data: {turbo_method: :delete,
                  turbo_confirm: "Je confirme la suppression"} do %>
                  <i class="fa-solid fa-trash"></i>
          <% end %>
  </div>
</div>
