<div class="container">
  <div class="d-flex align-items-baseline">
    <%= link_to :back, class: "text-decoration-none text-muted" do %>
      <i class="fa-solid fa-chevron-left pe-3"></i>
    <% end %>
    <h1 class="mb-4">Toutes les<br><strong>activit√©s</strong></h1>
  </div>

  <div class="row" data-controller="activity-category">
    <div class="mt-2">
      <button data-activity-category-target="cardio" data-action="click->activity-category#loadCardio" class="btn-orange-mini">Cardio</button>
      <button data-activity-category-target="muscu" data-action="click->activity-category#loadMuscu" class="btn-white-grey">Musculation</button>

      <div data-activity-category-target="cardioSection" class="mt-3">
        <h2>Cardio</h2>
        <div class="cards-grid">
          <% @cardio.each do |cardio| %>
            <div class="card" style="background-image: url(<%= cardio.picture %>)">
              <%= button_to new_activity_activities_log_path(cardio),
                  method: :get,
                  class: "card-plus" do %>
                    <i class="fa-solid fa-plus"></i>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <div data-activity-category-target="muscuSection" class="mt-3 d-none">
        <h2>Renforcement musculaire</h2>
        <div class="cards-grid">
          <% @muscu.each do |muscu| %>
            <div class="card" style="background-image: url(<%= muscu.picture %>)">
              <%= button_to new_activity_activities_log_path(muscu),
                  method: :get,
                  class: "card-plus" do %>
                    <i class="fa-solid fa-plus"></i>
              <% end %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
