<div class="container">
  <div class="row" data-controller="recipe-category">
    <div class="d-flex align-items-baseline">
      <%= link_to :back, class: "text-decoration-none text-muted" do %>
        <i class="fa-solid fa-chevron-left pe-3"></i>
      <% end %>
      <h1><b><%= @recipe.category %></b></h1>
    </div>
  </div>
  <h2><%= @recipe.name %></h2>
  <p><i class="fa-solid fa-fire"></i> <%= @recipe.calories %> calories</p>
  <div class="row">
    <div class="col-5">
      <div class="card-show" style="background-image: url(<%= @recipe.picture %>)"></div>
    </div>
    <div class="col-7">
    <h3>Ingrédients</h3>
      <p><%= @recipe.ingredient %></p>
    </div>
  </div>
  <div class="row">
  <h3>Préparation</h3>
    <p><%= @recipe.details %></p>
  </div>
</div>
