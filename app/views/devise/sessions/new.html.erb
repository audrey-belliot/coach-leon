<div class="container">
  <div class="authentification mt-3">
      <h2>Se connecter</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="authentification-input">
            <i class="mb-3 fa-solid fa-envelope"></i>
            <div>
              <%= f.input :email,

                          :input_html => { :class => 'authentification-grey-border' },
                          placeholder: "Email",
                          required: false,
                          autofocus: true,
                          label:false%>
            </div>
          </div>
          <div class="authentification-input">
            <i class="mb-3 fa-solid fa-lock"></i>
            <%= f.input :password,
                        :input_html => { :class => 'authentification-grey-border' },
                        label:false,
                        placeholder: "Mot de passe",
                        required: false %>
          </div>
        <div class="authentification-mdp-oublie-inscrire">
          <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class:"text-warning no-underline-mdp"%>
          <%= link_to "Je m'inscris", new_registration_path(resource_name), class:"no-underline-inscription"%>
        </div>


        <%# <%= render "devise/shared/links" %>
            <div class="form-action button">
            <%= f.button :submit, "Je me connecte", class:"btn-connexion" %>
            </div>
              <% end %>
      </div>
  </div>
</div>
